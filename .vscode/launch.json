  "version": "0.2.0",
  "configurations": [
    {
      "name": "yarn dev",
      "request": "launch",
      "runtimeArgs": [
        "dev",
      ],
      "runtimeExecutable": "yarn",
      "skipFiles": [
        "<node_internals>/**",
        ".yarn/**",
      ],
      "type": "node",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "  âžœ  Local:\\s+(http://[a-b0-9]+.[a-b0-9]+.[a-b0-9]+.[a-b0-9]+:[0-9]+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/.next/server",
        "killOnServerStop": true
      }
    },
    {
      "name": "signon page",
      "request": "launch",
      "localRoot": "${workspaceFolder}/signon-page-vite",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "dev",
      ],
      "skipFiles": [
        "<node_internals>/**",
        ".yarn/**",
      ],
      "type": "node",
      "internalConsoleOptions": "neverOpen",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "\\s+.\\s+Local:\\s+(http://[a-z0-9]+.[a-z0-9]+.[a-z0-9]+.[a-z0-9]+\\w+:[0-9]+)",
        "uriFormat": "%s",
        "killOnServerStop": true
      }
    },
    {
      "name": "convertImgToBase64",
      "program": "${workspaceFolder}/img-base64/convertImgToBase64.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "console": "integratedTerminal",
      "outputCapture": "console",
    },
  ]
}
